{% extends 'base.html.twig' %}

{% block body %}

    <br><br><br><br><br>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Imie</th>
            <th>Nazwisko</th>
            <th>Temat</th>
            <th>Wiadomość</th>
            <th>Data</th>
        </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.name }}</td>
                <td>{{ movie.surname }}</td>
                <td>{{ movie.subject }}</td>
                <td>{{ movie.messageUser }}</td>
                <td>{{ movie.date|date('Y-m-d') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}